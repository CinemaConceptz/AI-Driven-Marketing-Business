rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.uid == "hryXqvyqmjdfEy4TG0nvcmDbQxp2";
    }

    match /users/{uid} {
      allow read: if (isSignedIn() && request.auth.uid == uid) || isAdmin();
      allow write: if isSignedIn() && request.auth.uid == uid;

      match /media/{mediaId} {
        allow read: if mediaId == "press-image" && ((isSignedIn() && request.auth.uid == uid) || isAdmin());
        allow create, update: if mediaId == "press-image" && isSignedIn() && request.auth.uid == uid;
        allow delete: if mediaId == "press-image" && ((isSignedIn() && request.auth.uid == uid) || isAdmin());
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
